<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/handle_bg"
    android:orientation="vertical"
    android:padding="0.0px" >

    <ImageButton
        android:id="@+id/imageButton_m2_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:padding="0.0px"
        android:src="@drawable/handle_img_ma_a_off" />

    <ImageButton
        android:id="@+id/imageButton_m2_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="0.0px"
        android:src="@drawable/handle_img_ma_b_off" />

    <ImageButton
        android:id="@+id/imageButton_m2_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:padding="0.0px"
        android:src="@drawable/handle_img_ma_m_off" />

    <ImageButton
        android:id="@+id/imageButton_m2_j"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:padding="0.0px"
        android:src="@drawable/handle_img_ma_jo_off" />

    <ImageButton
        android:id="@+id/imageButton_m2_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/handle_img_setting_off" />

</RelativeLayout>
