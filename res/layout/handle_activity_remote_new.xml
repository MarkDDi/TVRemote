<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"

    >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/handle_bg_new"
        />
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >

        <ImageButton
            android:id="@+id/handle_top_img_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/handle_top_selector"
            />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/handle_down_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/handle_down_marginTop"
        android:background="@drawable/handle_down_selector"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/handle_left_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/handle_left_selector"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/relativeLayout"
        android:layout_marginEnd="@dimen/handle_left_marginEnd"
        android:layout_marginTop="@dimen/handle_left_marginTop"/>

    <ImageButton
        android:id="@+id/handle_right_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/handle_right_selector"
        android:layout_alignBottom="@+id/handle_left_img_btn"
        android:layout_alignStart="@+id/relativeLayout"
        android:layout_marginStart="50dp"/>


</RelativeLayout>
